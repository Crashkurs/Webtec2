        <html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <title>${title}</title>
    </head>
    <body class="container-fluid" style="background-image:url('/webtec2/layout/images/1429295_40383133.jpg');width:100%;height:100%;position:absolute;overflow:hidden;">
        <!-- start header -->
        <div class="row">
			<nav class="navbar navbar-default" style="background-color:white;border-radius:0;">
			  <div class="container-fluid">
			    <!-- Brand and toggle get grouped for better mobile display -->
			    <div class="navbar-header">
			      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
			        <span class="sr-only">Ausklappen</span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			      </button>
			      <t:pagelink page="login" style="color:#6e6e6e" class="navbar-brand">Croaky</t:pagelink>
			    </div>
			
			    <!-- Collect the nav links, forms, and other content for toggling -->
			    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			      <!--<ul class="nav navbar-nav">
			        <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
			        <li><a href="#">Link</a></li>
			      </ul>-->
			
			      <t:form t:id="searchForm" class="navbar-form navbar-left">
						<t:textfield t:id="searchField" t:value="searchFieldText" t:mixins="autocomplete"/>
						<t:loop source="users" value="user">
							<t:textfield t:id="test" t:value="searchFieldText">user.name</t:textfield><br/>
						</t:loop>
						<t:submit value="Search"/>
			      </t:form>
			      
			      <ul class="nav navbar-nav navbar-right">
	                   <t:security.authenticated>
	                    	<li style="height:80px;">
		                    	<t:pagelink page="Home">Home</t:pagelink>
		                   	</li>
		                   	<li>
		                    	<t:actionlink t:id="logout">Log out</t:actionlink>
		                   	</li>
		                    <li>
		                    	<t:pagelink page="Profile" context="user.name">Profile</t:pagelink>
		                   	</li>
		                   	<p:else>
		                   		<li>
		                    		<t:pagelink page="Login">Log in</t:pagelink>
		                   		</li>
		                   		<li>
		                    		<t:pagelink page="Register">Register</t:pagelink>
		                   		</li>
		                   	</p:else>
		                </t:security.authenticated>
			      </ul>
			    </div><!-- /.navbar-collapse -->
			  </div><!-- /.container-fluid -->
			</nav>
		</div>

        <!-- end header -->
        <!-- start page -->
        <div class="row" style="color:white;height:100%;">
        	<!-- start content-->
        	<div class="col-md-6 col-md-offset-1 content vcenter">
	                    <h2>${title}</h2>

	                        <t:body/>
        	</div>
        	<!-- end content-->
        	<!-- start sidebar-->
        	<div class="col-md-3 col-md-offset-1 vcenter">
        		<t:delegate to="sidebar"/>
        	</div>
        	<!-- end sidebar-->
        </div>
        <!-- end page -->
        <!-- start footer -->
        <footer class="footer" style="position:absolute;bottom:0;width:100%;height:60px;background-color:white;left:0;line-height:60px;">
	      <div class="container" style="text-align:center;">
	        <p class="text-muted">&copy;2015 tu.dortmund.de. All Rights Reserved.</p>
	      </div>
	    </footer>
        <!-- end footer -->
    </body>
</html>
