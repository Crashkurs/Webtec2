<html t:type="layout" title="Register"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
      
      <t:zone t:id="registerForm">
	   <div class="row">
      	<div class="col-md-5">
	      <t:form t:id="registerUser" t:zone="^">
	      	<p>
	      		<t:label for="username"/>
	      		<t:textfield t:id="username" t:validate="regexp" t:value="username" />
	      	</p>
	      	<p>
	      		<t:label for="password">
	      			Passwort
	      		</t:label>
	      		<t:passwordfield t:id="password" t:validate="regexp" t:value="password" />
	      	</p>
	      	<p>
	      		<t:label for="password2">
	      			Passwort wiederholen
	      		</t:label>
	      		<t:passwordfield t:id="password2" t:validate="regexp" t:value="password2" />
	      	</p>
	      	<t:submit t:id="register"/>
	      </t:form>
      	</div>
      </div>
	  </t:zone>
	  <p:sidebar>
      	<h1>Du bist schon registriert? Logge dich ein!</h1>
      	<t:pagelink page="Login" class="myButton"><span class="glyphicon glyphicon-cloud" aria-hidden="true"></span>    Zum Login</t:pagelink>
      	
      </p:sidebar>
</html>