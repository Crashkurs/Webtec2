<html t:type="layout" title="Register"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
      <t:zone t:id="registerForm">
	      <t:form t:id="registerUser" t:zone="^">
	      	<p>
	      		<t:label for="username"/>
	      		<t:textfield t:id="username" t:validate="regexp" t:value="username" />
	      	</p>
	      	<p>
	      		<t:label for="password">
	      			Password
	      		</t:label>
	      		<t:passwordfield t:id="password" t:validate="regexp" t:value="password" />
	      	</p>
	      	<p>
	      		<t:label for="password2">
	      			Password
	      		</t:label>
	      		<t:passwordfield t:id="password2" t:validate="regexp" t:value="password2" />
	      	</p>
	      	<t:submit t:id="register"/>
	      </t:form>
	  </t:zone>
</html>